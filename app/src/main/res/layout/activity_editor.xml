<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/uploadLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2"
    android:orientation="vertical" >
    <include android:id="@+id/topbar" layout="@layout/view_header" />

    <TextView
        android:id="@+id/tv_uname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="更换头像"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/picImg"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/bt_add_pic"
        android:onClick="clickImage"/>

    <TextView
        android:id="@+id/tv_pwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="更换密码"
        android:textSize="16sp" />


    <EditText
        android:id="@+id/ed_pwd1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/white"
        android:hint="请输入新的密码"
        android:password="true"
        android:padding="10dp"
        android:singleLine="true"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/ed_pwd2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="1dp"
        android:background="@android:color/white"
        android:gravity="top"
        android:password="true"
        android:hint="请再输入一次新密码"
        android:padding="10dp"
        android:textSize="16sp" />
    <Button
        android:id="@+id/btn_pwd"
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/btn_register"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="提交"
        android:textColor="@android:color/white"
        android:onClick="clickSubmit"
        android:textSize="15sp" />

</LinearLayout>